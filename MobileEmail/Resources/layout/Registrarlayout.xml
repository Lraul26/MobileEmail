<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">


    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:text="REGISTRO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="116.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableLayout1">
            <TextView
            android:text="Nombre Completo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow1">
                <EditText
                    android:inputType="textMultiLine"
                    android:layout_width="583.0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ETnombre" />
            </TableRow>
             <TextView
            android:text="Nombre Cuenta"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow2">
                <EditText
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ETCuenta" />
            </TableRow>
            <TextView
            android:text="E-mail"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow3">
                 <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ETemail" />
            </TableRow>
            <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableRow4">
                    <EditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ETpass1" />
            </TableRow>
             <TextView
        android:text="Repetir ContraseÃ±a"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
            <TableRow
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/tableRow5">
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ETpass2" />
            </TableRow>
            <TextView
                android:text="Foto Perfil"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView8" />

            <TableRow
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/tableRow6"> 
                <ImageView
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="200.0dp"
                    android:id="@+id/imageView1" />
            </TableRow>
            <Button
                android:text="Tomar Foto"
                android:layout_width="437.5dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnfoto" />
            <Button
        android:layout_gravity="center"
        android:text="Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnregistrarse" />
    <Button
        android:layout_gravity="center"
        android:text="Iniciar Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sesion" />
    <TextView
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtresultado" />

        </TableLayout>
    
    </ScrollView>

</LinearLayout>
